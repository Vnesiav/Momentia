<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="start">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/account_circle"
        android:contentDescription="@string/profile_picture"
        android:src="@drawable/account_circle"
        android:layout_marginEnd="4dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- Text message -->
        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_chat_received_background"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxWidth="200dp"
            tools:text="asfsdjahkfjhsjdkafhsdjkhfjksdhfakjfjkhasjfkhdsajkhf" />

        <!-- Image message (if any) -->
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_message"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11sp"
            tools:text="12:00" />

    </LinearLayout>



</LinearLayout>
